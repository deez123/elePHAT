<div id = "posts">
<% @posts.each do |post| %>
	<div class = "post">
	<div class = "post_title"><h3><a href = "/post/<%= post.id %>"><%= post.title %></a></h3></div>
    <div class = "post_body"><%= RbbCode.new.convert(post.body[0,25]) %></div>
    <div class = "post_tags"><div id = "post_text">
	<% for i in 0..4 %>
	<a href = "/tag/<%= post.tag_list[i] %>"><%= post.tag_list[i] %></a> 
	<% end %>
    </div></div>
    </div>
    <hr>
<% end %>
</div>